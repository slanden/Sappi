        <TextBox x:Name="searchBar"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,136,0,0" Width="256" Height="23" TextWrapping="Wrap" Text="(search)" GotFocus="Textbox_GotFocus"/>
        <DataGrid x:Name="dg" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1160" Height="500" AutoGenerateColumns="False" IsReadOnly="True" KeyUp="Datagrid_KeyUp" Margin="40,164,40,0" CanUserDeleteRows="False">
            <DataGrid.Resources>
                <ContextMenu x:Name="contextMenu" x:Key="RowMenu" DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}" Opened="contextMenu_Opened" Closed="contextMenu_Closed">
                    <MenuItem Header="Edit Cell" IsEnabled="True" Visibility="Visible"/>
                    <Separator/>
                    <MenuItem Header="Edit" Command="local:ContextCommands.Edit"/>
                    <MenuItem Header="Delete" Command="local:ContextCommands.Delete"/>
                </ContextMenu>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true"></Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <!--<EventSetter Event="MouseRightButtonUp" Handler="Context_MouseRightButtonUp"/>-->
                    <Setter Property="ContextMenu" Value="{StaticResource RowMenu}"/>
                    <EventSetter Event="MouseDoubleClick" Handler="EditStudentData"/>
                </Style>
            </DataGrid.RowStyle>
