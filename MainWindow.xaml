<Window x:Class="Sappi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sappi"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Loaded="Window_Loaded" Background="#282829">
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="0.25">
            <Canvas.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">                    
                    <GradientStop Color="#282829" Offset="0.65"/>
                    <GradientStop Color="#FFB8B8B8" Offset="1.75"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        
        <ContentControl Name="ContentArea"/>
    </Grid>
</Window>
