    <!-- GLASS EFFECT -->
    <LinearGradientBrush x:Key="GlassFX" StartPoint="0.5,1" EndPoint="0.5,0">
        <GradientStop Color="#33303031" Offset="0.5"/>
        <GradientStop Color="#FFB8B8B8" Offset="2.65"/>
