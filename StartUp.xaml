<UserControl x:Class="Sappi.StartUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sappi"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid >
        <Image Source="{StaticResource img_aieLogo}" Width="380" Height="380" />
        <!--New App button-->
        <Button Name="newAppButton" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Click="newAppButton_Click"  HorizontalAlignment="Center" Margin="0,0,300,0" VerticalAlignment="Bottom" ToolTip="New Application">
            <Image Source="{StaticResource img_newItem}" Height="100" Width="100"/>
        </Button>

        <!--View database button-->
        <Button Name="dbButton" Style="{StaticResource imgButton}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Click="DatabaseButton_Click" HorizontalAlignment="Center" Margin="300,0,0,0" VerticalAlignment="Bottom" ToolTip="View Database">
            <Image Source="{StaticResource img_database}" Height="100" Width="100"/>
        </Button>

    </Grid>
</UserControl>
