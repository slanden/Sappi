<UserControl x:Class="Sappi.StartUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sappi"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="DarkSlateGray">
        <!--New App button-->
        <Button Name="newAppButton" Click="newAppButton_Click"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">New Application</TextBlock>
        </Button>
        
        <!--View database button-->
        <Button Name="dbButton" Click="DatabaseButton_Click" HorizontalAlignment="Left" Margin="10,169,0,0" VerticalAlignment="Top" Width="75">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">View Database</TextBlock>
        </Button>
        
    </Grid>
</UserControl>
