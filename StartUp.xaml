<UserControl x:Class="Sappi.StartUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sappi"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <BitmapImage x:Key="img_newItem" UriSource="./bin/add.png"/>
        <BitmapImage x:Key="img_fileCabinet" UriSource="./bin/file-cabinet.png"/>
    </UserControl.Resources>
    <Grid >
        <!--New App button-->
        <Button Name="newAppButton" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Click="newAppButton_Click"  HorizontalAlignment="Left" Margin="200,422,0,0" VerticalAlignment="Top" ToolTip="New Application">
            <Image Source="{StaticResource img_newItem}" Height="64" Width="64"/>
        </Button>
        
        <!--View database button-->
        <Button Name="dbButton" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Click="DatabaseButton_Click" HorizontalAlignment="Left" Margin="469,422,0,0" VerticalAlignment="Top" ToolTip="View Database">
            <Image Source="{StaticResource img_fileCabinet}" Height="64" Width="64"/>
        </Button>
        

    </Grid>
</UserControl>
