<UserControl x:Class="Sappi.StartUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sappi"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid >
        <Image Source="{StaticResource img_aieLogo}" Width="380" Height="380" />
        
        <Button Name="newAppButton" Style="{StaticResource imgButton}" Click="newAppButton_Click"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,300,20" ToolTip="New Application">
            <Image Source="{StaticResource img_newItem}" Height="90" Width="90"/>
        </Button>

        <Button Name="dbButton" Style="{StaticResource imgButton}" Click="DatabaseButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="300,0,0,20" ToolTip="View Database">
            <Image Source="{StaticResource img_database}" Height="90" Width="90" />
        </Button>

    </Grid>
</UserControl>
